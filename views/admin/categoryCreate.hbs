                    />
                  </div>
                </div>
              </div>
            </div>
            <div class="form-group">
              <label for="categoryIcon">Bo'lim rasmi</label>
              <input
                type="file"
                id="categoryIcon"
                name="categoryIcon"
                class="form-control"
              />
            </div>
            <div class="form-group">
              <label for="sortNumber">Bo'lim raqami</label>
              <input
                type="number"
                id="sortNumber"
                name="sortNumber"
                class="form-control"
              />
            </div>
          </div>
          <div class="row">
            <div class="col-12 sadsf">
              <a href="/admin/products" class="btn btn-secondary">Bekor</a>
              <input
                type="submit"
                value="Qo'shish"
                class="btn btn-success float-right"
              />
            </div>
          </div>
        </form>
      </div>
    </div>
  </div>
</div>