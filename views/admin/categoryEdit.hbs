<div class="container">
  <div class="row">
    <div class="col-12">
      <div class="card card-primary">
        <div class="card-header admineditpage">
          <h3 class="card-title">AdminLTE Bo'lim Tahrirlash</h3>
          <div class="card-tools">
            <button
              type="button"
              class="btn btn-tool"
              data-card-widget="collapse"
              title="Collapse"
            >
              <i class="fas fa-minus"></i>
            </button>
          </div>
        </div>
        <form
          action="/admin/category/edit/{{category.id}}"
          method="POST"
          enctype="multipart/form-data"
        >
          <div class="card-body">
            <div class="form-group">
              <div class="row align-center">
                <div class="col-sm-6">
                  <!-- select -->
                  <div class="form-group">
                    <label>Bo'lim nomi</label>
                    <input
                      type="number"
                      class="form-control"
                      name="categoryName"
                      id="categoryName"
                      value="{{category.categoryName}}"
                    />
                  </div>
                </div>
              </div>
            </div>
            <div class="form-group">
              <label for="sortNumber">Bo'lim raqami</label>
              <input
                type="number"
                class="form-control"
                name="sortNumber"
                id="sortNumber"
                value="{{category.sortNumber}}"
              />
            </div>
            <div class="form-group">
              <label for="categoryIcon">Bo'lim belgisi</label>
              <input
                type="file"
                class="form-control"
                name="categoryIcon"
                id="categoryIcon"
                value="{{category.categoryIcon}}"
              />
            </div>
          </div>
          <div class="row">
            <div class="col-12 sadsf">
              <a
                href="/admin/products"
                class="btn btn-secondary adminpagetext"
              >Bekor</a>
              <button type="submit" class="btn btn-danger">Bo'lim yaratish</button>
            </div>
          </div>
        </form>
      </div>
    </div>
  </div>
</div>