<div class="container">
  <div class="row">
    <div class="col-12">
      <div class="card card-primary">
        <div class="card-header admineditpage">
          <h3 class="card-title">AdminLTE Mahsulot Tahrirlash</h3>
          <div class="card-tools">
            <button
              type="button"
              class="btn btn-tool"
              data-card-widget="collapse"
              title="Collapse"
            >
              <i class="fas fa-minus"></i>
            </button>
          </div>
        </div>
        <form action="/admin/edit/{{products.id}}" method="POST">
          <div class="card-body">
            <div class="form-group">
              <label class="adminpagetext" for="name">Mahsulot nomi</label>
              <input
                type="text"
                id="name"
                name="name"
                class="form-control"
                value="{{products.name}}"
              />
            </div>
            <div class="form-group">
              <label class="adminpagetext" for="img">Mahsulot rasmi</label>
              <input
                type="text"
                id="img"
                name="img"
                class="form-control"
                value="{{products.img}}"
              />
            </div>
            <div class="form-group">
              <label class="adminpagetext" for="titletxt">Mahsulotning tafsifi</label>
              <textarea
                id="titletxt"
                name="titletxt"
                class="form-control"
                rows="4"
              ></textarea>
            </div>
            <div class="form-group">
              <label class="adminpagetext" for="company">Mahsulot kompaniyasi</label>
              <input
                type="text"
                id="company"
                name="company"
                value="{{products.company}}"
                class="form-control"
              />
            </div>
            <div class="form-group">
              <label class="adminpagetext" for="situation">Project Leader</label>
              <input
                type="text"
                id="situation"
                name="situation"
                value="{{products.situation}}"
                class="form-control"
              />
            </div>
          </div>
          <div class="row">
            <div class="col-12">
              <a
                href="/admin/product"
                class="btn btn-secondary adminpagetext"
              >Bekor</a>
              <button type="submit" class="btn btn-danger">update</button>
            </div>
          </div>
        </form>
      </div>
    </div>
  </div>
</div>